<mvc:View 
	controllerName="mms_template.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:l="sap.ui.layout">

	<semantic:SemanticPage
		id="page"
		headerPinnable="true"
		toggleHeaderOnTitleClick="false"
		showFooter="true">


		<semantic:content>
				<IconTabBar
		         id="idIconTabBar"  >
			<content>
				 <!--   mode="SingleSelectLeft" -->
			<Table
				id="table"
				width="auto"
			    mode ="SingleSelectLeft"
			    growing="true"
				growingScrollToLoad="false"
				growingThreshold="20"
				
				items="{
				path: '/messagesSet',
					sorter: {
						path: 'EmailID',
						descending: false
					}
				}">
				<headerToolbar>
					<OverflowToolbar>
						<Title
							id="tableHeader"
							text="{i18n>worklistTitle} ({/countMessages})"
							level="H3"/>
					
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							placeholder="Search by Message ID"
							search=".onSearchMessages">
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="250px"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<Button tooltip="Configure Search" icon="sap-icon://action-settings" press="openConfigureSearchDialog"/>
						<Button
							id="sortUsersButton"
							press="onSort"
							tooltip="{i18n>sortButtonText}"
							icon="sap-icon://sort"/>		
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column id="emailId"
					width="30em">
						<Text text="Email"/>
					</Column>
						<Column id="ability"
						demandPopin="false"
						width="8em">
						<Text text="MMS Template compatability"/>
					</Column>
					<Column 
					    width="10em"
						id="mmsId"
						demandPopin="true"
						>
						<Text text="Tenсent MMS Template ID"/>
					</Column>
					<Column 
						id="status"
						demandPopin="true"
						width="25em">
						<Text text="Tencent status"/>
					</Column>
					<Column id="createdOn"
						demandPopin="false"
					width="12em">
						<Text text="Record created"/>
					</Column>
					
				
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
								title="{EmailName}"
								text="{EmailId}"/>
							<ObjectStatus
								text = "{
								path: 'Ability',
								formatter: '.formatter.abilityStatus'
							    }"
							    state ="{=	${Ability} === '1' ? 'Success'  : 'Error'}"/>
							<Text
								text="{MMSID}" />
							<ObjectStatus
								text="{Status}"
								state ="{=	${Status} === 'unknown' ? 'Error': 'Success'}"/>
						
							<ObjectStatus
								text="{
								path: 'SentOn',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: {  
								     pattern: 'dd/MM/yyyy'  
								   }
								}" 
								state="None"/>
					</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
			
		
	</IconTabBar>
			
	</semantic:content>

	 
		<!-- Custom Footer Content-->
		<semantic:footerCustomActions>
			<Button text="{i18n>checkAbility}" press=".onCheckAbility" class="sapUiTinyMarginBeginEnd" type="Emphasized"  icon="sap-icon://accept"/>
			<Button text="{i18n>saveTemplate}" press=".onSendTemplate"	class="sapUiTinyMarginBeginEnd" type="Emphasized" icon="sap-icon://action" />
			<Button text="{i18n>checkStatus}" press=".onCheckStatus" class="sapUiTinyMarginBeginEnd" type="Emphasized" icon="sap-icon://cause" />
		</semantic:footerCustomActions>
	 
	 
	

	</semantic:SemanticPage>



</mvc:View>