<mvc:View 
	controllerName="mms_template.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:l="sap.ui.layout">

	<semantic:SemanticPage
		id="page"
		headerPinnable="true"
		toggleHeaderOnTitleClick="false"
		showFooter="true">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
				
		</semantic:titleHeading>
<!--select=".onQuickFilter"-->

		<semantic:content>
				<IconTabBar
		         id="idIconTabBar"  >
			<content>
			<Table
				id="table"
				width="auto"
			    mode="MultiSelect"
			    growing="true"
				growingScrollToLoad="false"
				growingThreshold="25"
				
				items="{
				path: '/messagesSet',
					sorter: {
						path: 'EmailID',
						descending: false
					}
				}">
				<headerToolbar>
					<OverflowToolbar>
						<Title
							id="tableHeader"
							text="{i18n>worklistTitle}"
							level="H3"/>
					
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearchMessages">
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="250px"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
							<Button text="{i18n>checkAbility}" press=".onCheckAbility" />
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column id="emailId"
					width="25em">
						<Text text="Email"/>
					</Column>
						<Column id="ability"
						demandPopin="false"
						width="8em">
						<Text text="Available for Template"/>
					</Column>
					<Column 
					    width="10em"
						id="mmsId"
						demandPopin="true"
						>
						<Text text="Tenсent MMS Template ID"/>
					</Column>
					<Column 
						id="status"
						demandPopin="true"
						width="20em">
						<Text text="Tencent status"/>
					</Column>
					<Column id="createdOn"
						demandPopin="false"
					width="15em">
						<Text text="Sent on"/>
					</Column>
					
				
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
								title="{EmailName}"
								text="{EmailId}"/>
								
							<Text
								text="{Ability}" />
							<Text
								text="{MMSID}" />
							<Text
								text="{Status}"  />
							<Text
								text="{SentOn}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
			
		
	</IconTabBar>
			
	</semantic:content>

	 <semantic:positiveAction>
		  <semantic:PositiveAction text="{i18n>saveTemplate}" press=".onSaveTemplate"/>
	 </semantic:positiveAction>
	 <semantic:negativeAction>
		  <semantic:NegativeAction text="{i18n>checkStatus}" press=".onCheckStatus"/>
	 </semantic:negativeAction>
	 
		<!-- Custom Footer Content-->
		<semantic:footerCustomActions>
			<Button text="Save" />
			<Button text="Cancel" />
		</semantic:footerCustomActions>
	 
	 
	

	</semantic:SemanticPage>



</mvc:View>